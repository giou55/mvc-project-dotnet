@using mvc_project_dotnet.Models.ViewModels
@model BookViewModel
@{
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-5">@Model?.Action (Book/BookEditor view)</h1>
</div>

<form asp-action="@Model?.Action" method="post">
    <div class="form-group">
        <label asp-for="Book.BookID"></label>
        <input class="form-control" asp-for="Book.BookID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <div>
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Book.Title"
               readonly="@Model?.ReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Description"></label>
        <div>
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>
        <textarea class="form-control" rows="3" asp-for="Book.Description"
               readonly="@Model?.ReadOnly">
        </textarea>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Book.Author"
               readonly="@Model?.ReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Price"></label>
        <div>
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Book.Price"
               readonly="@Model?.ReadOnly" />
    </div>
    @if (Model?.ShowAction == true)
    {
        <button class="btn btn-@Model?.Theme mt-2" type="submit">
            @Model?.Action
        </button>
    }
    <a class="btn btn-secondary mt-2" asp-action="Index">Back</a>
</form>
